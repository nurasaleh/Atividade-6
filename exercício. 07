programa
{
//7. Faça um programa que peça ao usuário uma nota, entre zero e dez. Mostre uma
//mensagem caso o valor seja inválido e continue pedindo até que o usuário informe um valor válido.
	
	funcao inicio()
	{
		inteiro nota = 10

		escreva("digite uma nota entre 0 e 10: ")
		leia(nota)

		enquanto(nota > 10){
		escreva("esse valor é inválido, tente novamente: ")
		leia(nota)
	}
		
		escreva("esse valor é válido!!!!") 
	}
}
