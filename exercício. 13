programa {
	
//13. Faça um programa que leia 5 números e informe a soma e a média dos números

inclua biblioteca Matematica --> mat
	
    	funcao inicio ()
    	{
    		 real n1, n2, n3, n4, n5, media, soma
    
    		escreva ("digite um valor:\n")
    		leia (n1)
    
    		escreva ("digite um valor:\n")
    		leia (n2)
    		
    		escreva ("digite um valor:\n")
    		leia (n3)
    		
    		escreva ("digite um valor:\n")
    		leia (n4)
    		
    		escreva ("digite um valor:\n")
    		leia (n5)
    		
            soma = (n1 + n2 + n3 + n4 + n5)
    		media = soma / 5
    		
    		escreva ("a soma de todos os valores é:\n", soma )
    		escreva ("\n e sua média é:" , media )
    }
} 
